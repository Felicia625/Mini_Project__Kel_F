<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/pokemonListFragment">

    <fragment
        android:id="@+id/pokemonListFragment"
        android:name="com.example.mini_project.PokemonListFragment"
        android:label="Pokemon List">
        <action
            android:id="@+id/action_pokemonListFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.mini_project.DetailFragment"
        android:label="Detail">
        <argument
            android:name="pokemonId"
            app:argType="string" /> <!-- or "integer" if pokedexId is Int -->
    </fragment>
</navigation>
